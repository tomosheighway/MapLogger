<Window x:Class="MapLogger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:gmap="clr-namespace:GMap.NET.WindowsPresentation;assembly=GMap.NET.WindowsPresentation"
        Title="Offline Map Logger" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0"> 
            <gmap:GMapControl x:Name="gmap" 
                MouseDoubleClick="Zoom_MouseDoubleClick" 
                MouseRightButtonDown="Save_MouseRightClick" />

                     <!-- colour key   -->
                    <StackPanel Orientation="Vertical"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Margin="10">
                        <StackPanel Orientation="Horizontal" Margin="0 2">
                            <Ellipse Width="12" Height="12" Fill="Blue" Stroke="Black" StrokeThickness="1" Margin="0 5 0 0"/>
                            <TextBlock Text="Temp" Margin="5,0,0,0"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0 2">
                            <Ellipse Width="12" Height="12" Fill="LightBlue" Stroke="Blue" StrokeThickness="1" Margin="0 5 0 0"/>
                            <TextBlock Text="Saved" Margin="5,0,0,0"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Zoom buttons in top right -->
                    <StackPanel Orientation="Vertical"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Margin="10">       
                        <Button Click="ZoomIn_Click" Margin="4" Background="Transparent">
                            <TextBlock Text="+" FontWeight="Bold" FontSize="16"/>
                        </Button>
                        <Button Click="ZoomOut_Click" Margin="4" Background="Transparent">
                            <TextBlock Text="-" FontWeight="Bold" FontSize="16"/>
                        </Button>
                    </StackPanel>
        </Grid>


        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="5">
            <Button Content="?" Click="Help_Click" Margin="5"/>
            <TextBlock Text="Latitude:" Margin="0,0,0,2"/>
            <TextBox x:Name="latBox" Width="100" Margin="5"/>
            <TextBlock Text="Longitude:" Margin="0,0,0,2"/>
            <TextBox x:Name="lonBox" Width="100" Margin="5"/>
            <Button Content="Search Location" Click="SearchLocation_Click" Margin="5"/>
            <Button Content="Save Location" Click="SaveLocation_Click" Margin="5"/>
            <!-- 
            <Button Content="ZOOM +" Click="ZoomIn_Click" Margin="5"/>
            <Button Content="ZOOM -" Click="ZoomOut_Click" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="5"/>
            -->
        </StackPanel>
    </Grid>
</Window>
